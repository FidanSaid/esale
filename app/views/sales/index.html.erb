
<br><br>
 <header class="intro-header" style="background-image: url('/assets/img/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>E-Sale</h1>
                        <hr class="small">
                        <!-- <span class="subheading">A Clean Blog Theme by Start Bootstrap</span> -->
                    </div>
                </div>
            </div>
        </div>
    </header>
<center><h1>Sales</h1></center>
     <br>
<table class="table table-striped table table-bordered table table-hover" >
  <thead>
    <tr class="success">
    <th>Category</th>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Address map</th>
     <!--  <th>Action</th> -->

     <!--  <th>Latitude</th>
      <th>Longitude</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
       <td><%= sale.category && sale.category.name %></td>
        <td><%= sale.title %></td>
        <td><%= sale.description %></td>
        <td><%= sale.date %></td>
        <td><%= sale.address_map %></td>
      <!--   <td><%= sale.latitude %></td>
        <td><%= sale.longitude %></td> --> 
        <td><%= link_to 'Show', sale %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<script src="https://maps.googleapis.com/maps/api/js?libraries= AIzaSyCctXxRoyd4eIHR6krFCb7fJOFEV_K_0eU "></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> 
<center><div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div></center>
<script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){

        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();

      });


</script>   

